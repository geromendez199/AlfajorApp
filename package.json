{
  "name": "alfajor-order-system",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "turbo run dev --parallel --filter=./apps/*",
    "dev:api": "docker compose -f docker/docker-compose.yml up -d && pnpm --filter api dev",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "prisma": "^5.11.0",
    "ts-node": "^10.9.1",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
