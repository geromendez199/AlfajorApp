generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CASHIER
  KITCHEN
  MANAGER
  ADMIN
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  READY
  DELIVERED
  CANCELLED
}

enum Channel {
  COUNTER
  PICKUP
  DELIVERY
}

model User {
  id        String   @id @default(uuid())
  name      String
  pin       String   @unique
  role      Role
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  sortOrder Int       @default(0)
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String?
  categoryId  String
  priceSolo   Int
  priceCombo  Int?
  isAvailable Boolean       @default(true)
  canBeCombo  Boolean       @default(false)
  category    Category      @relation(fields: [categoryId], references: [id])
  extras      Extra[]
  orderItems  OrderItem[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([categoryId])
}

model Extra {
  id        String    @id @default(uuid())
  name      String
  price     Int
  productId String?
  isGlobal  Boolean   @default(false)
  isSwap    Boolean   @default(false)
  product   Product?  @relation(fields: [productId], references: [id])
  orderItemExtras OrderItemExtra[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

model Order {
  id        String       @id @default(uuid())
  number    Int          @unique @default(autoincrement())
  channel   Channel
  status    OrderStatus  @default(PENDING)
  total     Int
  notes     String?
  userId    String?
  user      User?        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([status])
  @@index([channel])
}

model OrderItem {
  id         String           @id @default(uuid())
  orderId    String
  productId  String
  qty        Int
  notes      String?
  unitPrice  Int
  isCombo    Boolean          @default(false)
  order      Order            @relation(fields: [orderId], references: [id])
  product    Product          @relation(fields: [productId], references: [id])
  extras     OrderItemExtra[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  @@index([orderId])
  @@index([productId])
}

model OrderItemExtra {
  id          String   @id @default(uuid())
  orderItemId String
  extraId     String
  price       Int
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  extra       Extra     @relation(fields: [extraId], references: [id])
  createdAt   DateTime  @default(now())

  @@index([orderItemId])
  @@index([extraId])
}
